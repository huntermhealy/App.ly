<p id="notice"><%= notice %></p>

<h1>Applications</h1>
<li><%= link_to('Enter A New Application', new_application_path) %> <br>
<li><%= link_to('Return To Home', root_path) %> <br>
<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %> <br>
<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Deadline</th>
      <th># of Recommendations</th>
      <th>Essay</th>
      <th>Essay topics</th>
      <th>Award Amount ($)</th>
      <th>Essay Word Count</th>
      <th colspan="3"></th>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.link %></td>
        <td><%= application.due %></td>
        <td><%= application.num_recommendations %></td>
        <td><%= application.essay %></td>
        <td><%= application.essay_topics %></td>
        <td><%= application.award_amount %></td>
        <td><%= application.essay_word_count %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Delete', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

